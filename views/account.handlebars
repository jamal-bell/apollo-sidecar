<section id="profile">
        <h2>Profile</h2>
        <form>
            <div>
                <label for="firstName">First Name:</label>
                <input type="text" id="firstName" name="firstName" value="{{user.lastName}}" readonly>
            </div>
            <div>
                <label for="lastName">Last Name:</label>
                <input type="text" id="lastName" name="lastName" value="{{user.lastName}}" readonly>
            </div>
            <div>
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" disabled>
            </div>
            <div>
                <label for="bio">Bio:</label>
                <textarea id="bio" name="bio" disabled></textarea>
            </div>
            <div>
                <label for="github">GitHub Link:</label>
                <input type="url" id="github" name="github" disabled>
            </div>
            <div>
                <label for="userType">User Type:</label>
                <input type="text" id="userType" name="userType" disabled>
            </div>
            <div>
                <label for="createdAt">Account Created At:</label>
                <input type="text" id="createdAt" name="createdAt" disabled>
            </div>
            <div>
                <label for="lastLogin">Last Login:</label>
                <input type="text" id="lastLogin" name="lastLogin" disabled>
            </div>
            <div class="buttons">
                <button type="button" onclick="location.href='/user/profile'">Edit Profile</button>
                <button type="button" onclick="location.href='/user/profile/password'">Change Password</button>
            </div>
        </form>
    </section>

    <section id="lessons">
        <h2>Lessons</h2>
        <ul>
            {{#each errors}}
                <li>
                    <h3>{{this.lessonName}}</h3>
                    <p>Status: <span>Completed/In Progress</span></p>
                    <button type="button" onclick="location.href='/lesson/details'">Review/Continue</button>
                </li>
            {{/each}}
            <li>
                
            </li>
        </ul>
    </section>

    <!-- Q&A Contributions Section -->
    <section id="qas">
        <h2>Q&A Contributions</h2>
        <ul>
            <!-- Repeat this list item for each Q&A contribution -->
            <li>
                <h3>Question Name</h3>
                <p>Type: <span>Question Type</span></p>
                <p>Answers: <span>Number of Answers</span></p>
                <p>Upvotes: <span>Number of Upvotes</span></p>
                <p>Date Posted: <span>Date</span></p>
            </li>
        </ul>
    </section>